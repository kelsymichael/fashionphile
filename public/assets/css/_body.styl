/*==================
==== colors ========
==================*/

$pink-dark = #E72589
$pink-light = #FF0099
$light = #D5D5D5
$medium = #949494
$dark = #5A5A5A
$black = #2F2F2F

html
body
	font-family: 'Muli', sans-serif


.form-control:focus
	box-shadow: inset 0 1px 1px rgba(0,0,0,.075), 0 0 8px rgba(255, 0, 153, 0.6);
	border-color $pink-light
	

	

/*==================
==== buttons ========
==================*/
.btn 
	width 100%

.btn-info
	background $dark
	color #fff 
	&:hover 
		background $pink-light
		color #fff
		 
.btn-default
	background #FFF 
	color $pink-light
	transition .25s 
	&:hover
		background $pink-light
		color #FFF 
		transition .25s

.jumbotron
	background $black
	color #FDFDFD
	
