/*==================
==== colors ========
==================*/

$pink-dark = #E72589
$pink-light = #FF0099
$light = #D5D5D5
$medium = #949494
$dark = #5A5A5A
$black = #2F2F2F

$nav = #434343

html
body
	width 100%
	height 100%
	font-family: 'Muli', sans-serif

	
.footer
	position: absolute
	bottom 0
	width: 100%
	height: 80px
	background $light 


.container-fluid
	background #FFF 	

.form-control
	border-radius 4px

select.form-control	
	font-size 20px

.form-control:focus
	box-shadow: inset 0 1px 1px rgba(0,0,0,.075), 0 0 8px rgba(255, 0, 153, 0.6);
	border-color $pink-light
	
.logo
	max-width: 400px
	min-width: 300px
	
.logosmall
	max-width: 200px
	margin 0
	padding 0
	


.login
	margin-bottom 30px
	

.selection
	margin-top 20px
	
	

/*==================
==== buttons ========
==================*/
.btn 
	width 100%
	border-radius 4px

.btn-info
	background $dark
	color #fff 
	&:hover 
		background $pink-light
		color #fff
		 
.btn-default
	background $pink-light 
	color #FFF
	border-color #eb0c8f
	transition .25s 
	&:hover
		background $pink-dark
		color #FFF 
		border-color #b90160
		transition .25s

.jumbotron
	background $nav
	margin-top 0
	color #FFF
	
.header
	background $nav
	padding 20px	

.logout
	margin-left 20px
	
	













